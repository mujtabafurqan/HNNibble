{
  "name": "hnnibble",
  "displayName": "HN Nibble",
  "version": "1.0.0",
  "description": "AI-powered summaries of Hacker News stories in bite-sized nibbles",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react-native",
    "expo",
    "hacker-news",
    "ai-summaries",
    "news-reader"
  ],
  "author": "HN Nibble Team",
  "license": "MIT",
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "expo": "~53.0.20",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-vector-icons": "^10.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/react": "~19.0.10",
    "jest": "^30.0.4",
    "react-test-renderer": "^19.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.{ts,tsx,js}",
      "**/*.(test|spec).{ts,tsx,js}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/node_modules/**"
    ],
    "setupFilesAfterEnv": [],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.expo/"
    ]
  },
  "private": true
}
